SHELL := /bin/bash

release-major: alarm
	npm version major -m "Release %s"
	git push
	npm publish

release-minor: alarm
	npm version minor -m "Release %s"
	git push
	npm publish

release-patch: alarm
	npm version patch -m "Release %s"
	git push
	npm publish

.PHONY: alarm release-major release-minor release-patch
